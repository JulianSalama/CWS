package controllers

import play.api._
import play.api.mvc._
import models._

import models._
import org.squeryl.PrimitiveTypeMode._
import controllers.lib.{Withs, FBApiCalls}


import play.api.libs.json._
import play.api.libs.functional.syntax._

object Albums extends Controller {

 def createAlbum() = Withs.WithFacebookValidation { implicit request => {
    request.body.asJson match {
      case Some(json) => {
	val name = (json \ "name").asOpt[String]
	val friendsIDs = (json \ "friends").asOpt[Array[String]]
	println(json)
      }
      case None => println("no json found")
    }
    Ok("")
  } }


